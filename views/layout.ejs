<%
let routeName = req.path;

let currentLang = locale;
let pageId = (routeName) ? 'page_'+routeName.replace(/\//,'').replace(/:[^\/]*\//g,'').replace(/\//g,'_') : '';
let pageClassName = (routeName) ? 'page-'+routeName.replace(/\//,'').replace(/:[^\/]*\//g,'').replace(/\//g,' page-') : '';
pageClassName = pageClassName + ' page-'+currentLang;
const path_header = './layouts/_header';
%>

<!DOCTYPE html>
<html lang="<%- currentLang %>">

<head>
    <meta charset="utf-8">
    <title><%= __('Title') %></title>
    <meta name="description" content="TOKYO TOWER TOP DECK TOUR">
    <meta name="keywords" content="TOKYO TOWER TOP DECK TOUR">
    <meta name="viewport" content="width=device-width,user-scalable=no,maximum-scale=1">
    <meta name="format-detection" content="telephone=no">

    <link href="/css/style.css" rel="stylesheet">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
    <script src="/js/lib/bootstrap.min.js"></script>
    <script src="/js/lib/url.min.js"></script>
    <script src="/js/lib/moment.min.js"></script>
    <script src="/js/common.js"></script>

    <%- include('./layouts/_ga') %>
</head>

<body id="<%- pageId %>" class="<%- pageClassName %>">

    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-WNPVQWV" height="0" width="0"
            style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->

    <%- include(path_header) %>

    <div class="container">
        <%- body %>
    </div>

    <%- include('./layouts/_footer') %>

</body>

</html>